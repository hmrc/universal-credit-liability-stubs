meta {
  name: Invalid Start Date and End Date
  type: http
  seq: 9
}

post {
  url: {{api-host}}/ni/person/:nino/liability/universal-credit
  body: json
  auth: none
}

params:path {
  nino: {{randomNino}}
}

headers {
  Authorization: {{authorization}}
  Content-Type: application/json
  correlationId: {{correlationId}}
  gov-uk-originator-id: {{govUkOriginatorId}}
}

body:json {
  {
    "universalCreditLiabilityDetails": {
      "universalCreditRecordType": "{{randomUniversalCreditRecordType}}",
      "dateOfBirth": "2002-04-27",
      "liabilityStartDate": "INVALID_LIABILITY_START_DATE",
      "liabilityEndDate": "INVALID_LIABILITY_END_DATE"
    }
  }
}

assert {
  res.status: eq 400
  res.headers.correlationid: eq {{correlationId}}
}
